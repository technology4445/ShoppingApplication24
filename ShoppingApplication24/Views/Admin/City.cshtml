@using ShoppingApplication24.Models
@model List<City>

<div class="box-header with-border">
    <h3 class="box-title">Cities</h3>
</div>
<div class="box-body">
    <div>
        <table class="table table-bordered" border="1" rules="all" cellspacing="0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>

                @foreach (var city in Model)
                {
                    <tr>

                        <td>@city.Id</td>
                        <td>@city.Name</td>
                        <td>
                            <a asp-controller="Admin" asp-action="CreateUpdateCity" asp-route-id="@city.Id">Update</a>&nbsp;&nbsp;
                            <a asp-controller="Admin" asp-action="DeleteCity" asp-route-id="@city.Id" onclick="return confirm('Are You Sure To Delete Product');">Delete</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<a target="_blank" asp-controller="Admin" asp-action="CreateUpdateCity"><button>Add City</button></a>