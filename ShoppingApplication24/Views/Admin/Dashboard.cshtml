        <li><a asp-controller="Admin" asp-action="OrderStatus">OrderStatus</a></li>
        <li><a asp-controller="Admin" asp-action="Products">Products</a></li>
        <li><a asp-controller="Admin" asp-action="ProductStatus">ProductStatus</a></li>
        <li><a asp-controller="Admin" asp-action="Role">Role</a></li>
        <li><a asp-controller="Admin" asp-action="SubCategory">SubCategory</a></li>
        <li><a asp-controller="Admin" asp-action="Users">Users</a></li>
    </ul>
</div>
