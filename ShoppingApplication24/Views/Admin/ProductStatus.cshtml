@using ShoppingApplication24.Models
@model List<ProductStatus>

<div class="box-header with-border">
    <h3 class="box-title">Products Status</h3>
</div>
<div class="box-body">
    <div>
        <table class="table table-bordered" border="1" rules="all" cellspacing="0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>

                @foreach (var productStatus in Model)
                {
                    <tr>

                        <td>@productStatus.Id</td>
                        <td>@productStatus.Name</td>


                        <td>
                            <a asp-controller="Admin" asp-action="CreateUpdateProductStatus" asp-route-id="@productStatus.Id">Update</a>&nbsp;&nbsp;
                            <a asp-controller="Admin" asp-action="DeleteProductStatus" asp-route-id="@productStatus.Id" onclick="return confirm('Are You Sure To Delete Product');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<a target="_blank" asp-controller="Admin" asp-action="CreateUpdateProductStatus"><button>Add ProductStatus</button></a>