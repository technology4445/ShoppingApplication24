@using ShoppingApplication24.Models
@model List<SubCategory>

<div class="box-header with-border">
    <h3 class="box-title">Sub Categories</h3>
</div>
<div class="box-body">
    <div>
        <table class="table table-bordered" border="1" rules="all" cellspacing="0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Main Category</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>

                @foreach (var subCategories in Model)
                {
                    <tr>

                        <td>@subCategories.Id</td>
                        <td>@subCategories.Name</td>
                        <td>@subCategories.Category.Name</td>
                        <td>
                            <a asp-controller="Admin" asp-action="CreateUpdateSubCategory" asp-route-id="@subCategories.Id">Update</a>&nbsp;&nbsp;
                            <a asp-controller="Admin" asp-action="DeleteSubCategory" asp-route-id="@subCategories.Id" onclick="return confirm('Are You Sure To Delete Product');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<a target="_blank" asp-controller="Admin" asp-action="CreateUpdateSubCategory"><button>Add SubCategory</button></a>